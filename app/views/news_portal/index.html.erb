<h1>Welcome to Kreditz News Portal.</h1>
<p id="notice"><%= notice %></p>
<h1>Welcome to Kreditz News Portal.</h1>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Details</th>
      <th>Published</th>
      <th>Priority</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.category %></td>
        <td><%= news.title %></td>
        <td><%= news.subtitle %></td>
        <td><%= news.details.html_safe %></td>
        <td><%= news.published %></td>
        <td><%= news.priority %></td>
        <td><%= news.published_at %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New News', new_news_path %>
